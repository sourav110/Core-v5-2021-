@model CoreApp.Models.Student

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Add Student</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Student" asp-action="AddStudent" enctype="multipart/form-data" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" type="text" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label"></label>
                <input asp-for="DateOfBirth" class="form-control dobDatepicker" type="text" id='picker'/>
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentPhoto" class="control-label"></label>
                <input class="form-control" type="file" name="StdPhoto" />
                <span asp-validation-for="StudentPhoto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


    
    <script>
        $(function () {
            $(".dobDatepicker").datepicker({
                changeMonth: true,
                changeYear: true,
                dateFormat: "yy-mm-dd",
                showButtonPanel: true,
            });

            $(document).on('click', "button.ui-datepicker-current", function () {
                $(".dobDatepicker").datepicker('setDate', new Date()).datepicker('hide').blur(); 
            });
        });

    </script>
}
